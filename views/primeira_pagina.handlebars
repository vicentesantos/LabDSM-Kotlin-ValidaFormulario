              <input
                type="text"
                class="form-control"
                required
                name="telefone"
                id="telefone"
                placeholder="(xx)xxxxx-xxxx"
              />
              <script>
                $(document).ready(function(){
                $('#exampleFormControlSelect1').change(function(){ var origem =
                this.value; if(origem == 'Celular'){
                $('#telefone').mask('(00)00000-0000'); } else if(origem ==
                'Fixo'){ $('#telefone').mask('(00) 0000-0000'); } }); });
              </script>

            </div>

            <script>
              document.getElementById("telefone").addEventListener("input",
              function () { // Remova qualquer caractere que não seja um número
              this.value = this.value.replace(/[^0-9]/g, ""); });
            </script>

